<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mock_cgv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:fullBackupOnly="false"
        android:icon="@drawable/cgvlogologologo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".src.main.numberselect.NumberSelectActivity" />
        <activity android:name=".src.main.ticketing.TicketingActivity" />
        <activity android:name=".src.main.select.SelectMovieActivity" />
        <activity android:name=".src.main.moviedetail.MovieDetailActivity" />
        <activity android:name=".src.main.signup.SignUpActivity" />
        <activity android:name=".src.main.login.LogInActivity" />
        <activity android:name=".src.main.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.numberselect.NumberSelectActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/black">

    <LinearLayout
        android:background="@drawable/bbodrder"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#e9e9e9"
            android:id="@+id/number_select_tv_select_people"
            android:layout_width="match_parent"
            android:text="인원선택"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="일반"
                android:layout_width="100dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/number_select_tv_countAdult"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/number_select_tv_countAdult_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ㅡ"
                    android:onClick="customOnClick"/>
                <Button
                    android:id="@+id/number_select_tv_countAdult_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:onClick="customOnClick"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="청소년"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/number_select_tv_countStudent"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/number_select_tv_countStudent_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ㅡ"
                    android:onClick="customOnClick"/>
                <Button
                    android:id="@+id/number_select_tv_countStudent_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:onClick="customOnClick"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="우대"
                android:layout_width="100dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/number_select_tv_countSpecial"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/number_select_tv_countSpecial_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ㅡ"
                    android:onClick="customOnClick"/>
                <Button
                    android:id="@+id/number_select_tv_countSpecial_plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:onClick="customOnClick"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/number_select_tv_buy"
                android:text="결제"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="customOnClick"/>
            <Button
                android:id="@+id/number_select_tv_exit"
                android:text="취소"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="customOnClick"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
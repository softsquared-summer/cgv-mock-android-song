<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_close_black_24dp"
        android:scaleType="fitXY"
        android:layout_gravity="right"/>
    <TextView
        android:id="@+id/dialog_tv_theater_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <!--몇관-->
        <TextView
            android:id="@+id/dialog_tv_room_id"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:layout_height="50dp"/>
        <!--총 좌석수-->
        <TextView
            android:id="@+id/dialog_tv_total_seat"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <!--그림-->
    <ImageView
        android:id="@+id/dialog_iv_seat_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/dialog_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <!--시작시간-->
        <TextView
            android:id="@+id/dialog_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"/>
        <!--끝나는시간-->
        <TextView
            android:id="@+id/dialog_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
        <!--잔여좌석-->
        <TextView
            android:id="@+id/dialog_tv_seat_count"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="match_parent"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_tv_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#A52A2A"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:text="인원/좌석 선택"
        android:background="#d3d3d3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/dialog_btn_choose"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>
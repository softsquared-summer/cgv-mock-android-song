<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:background="@drawable/review_item_border">

    <TextView
        android:id="@+id/ticketing_theater_recycler_btn_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColor="#A52A2A"
        android:textSize="18dp"
        android:background="#f0f0f0"
        android:paddingTop="5dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"/>
    <!-- TODO 별표 이미지 넣기(android:drawableLeft="@drawable/ic_settings"-->

    <LinearLayout
        android:id="@+id/ticketing_theater_recycler_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="5dp"
                android:text="자막,4DX 2D,4DX DAY"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/ticketing_theater_recycler_unique_room_id"
                android:layout_width="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ticketing_theater_timetable1"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ticketing_show_ticket_detail_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_book">
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_start_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_end_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f0f0f0">
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_seat_count_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#008000"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_total_seat_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ticketing_theater_timetable2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ticketing_show_ticket_detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_book">
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_start_time_2"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_end_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f0f0f0">
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_seat_count_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#008000"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_total_seat_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ticketing_theater_timetable3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ticketing_show_ticket_detail_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_book">

                    <TextView
                        android:id="@+id/ticketing_theater_recycler_start_time_3"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_end_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f0f0f0">
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_seat_count_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#008000"/>
                    <TextView
                        android:id="@+id/ticketing_theater_recycler_total_seat_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
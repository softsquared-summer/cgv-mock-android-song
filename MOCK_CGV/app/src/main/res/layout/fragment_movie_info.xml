<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.moviedetail.movieinfo.MovieInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_movie_black_24dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/movie_info_tv_genre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/movie_info_tv_running_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/movie_info_tv_view_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="#008000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/gam_fill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/info_tv_director_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_director_name"
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/info_director_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="감독"
                            android:textColor="#800080"
                            android:id="@+id/info_director_director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/info_actor1_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_actor1_name"
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/info_actor1_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:background="@color/gam_fill" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/info_actor2_img"
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_height="80dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_actor2_name"
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/info_actor2_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/info_actor3_img"
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_height="80dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_actor3_name"
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/info_actor3_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:background="@color/gam_fill" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:id="@+id/info_actor4_img"
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_height="80dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_actor4_name"
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/info_actor4_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/info_actor5_img"
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:id="@+id/info_actor5_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/info_actor5_en_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/gam_fill"/>
        <ImageView
            android:src="@drawable/giftcard"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/gam_fill"/>

    </LinearLayout>

</ScrollView>